                    <script>
                        // Category filter functionality with enhanced features
                        const categoryBtns = document.querySelectorAll('.category-btn');
                        const galleryCards = document.querySelectorAll('.gallery-card');

                        // Define category mappings
                        const categoryMap = {
                            'All Livestock': 'all',
                            'üêê Osmanabadi Goats': 'osmanabadi-goat',
                            'üêë Sheep': 'sheep',
                            'üêî Poultry': 'poultry'
                        };

                        // Categories are now assigned via data-category in the HTML
                        function assignCategories() {
                            // No need to manually assign categories as they come from the database
                            // Categories assigned from database
                        }

                        // Filter cards with smooth animation
                        function filterCards(category) {
                            galleryCards.forEach((card, index) => {
                                const cardCategory = card.dataset.category;
                                const shouldShow = category === 'all' || cardCategory === category || cardCategory === 'general';

                                if (shouldShow) {
                                    card.style.display = 'block';
                                    setTimeout(() => {
                                        card.style.opacity = '1';
                                        card.style.transform = 'translateY(0)';
                                    }, index * 50);
                                } else {
                                    card.style.opacity = '0';
                                    card.style.transform = 'translateY(20px)';
                                    setTimeout(() => {
                                        card.style.display = 'none';
                                    }, 300);
                                }
                            });
                        }

                        // Add event listeners to category buttons
                        categoryBtns.forEach(btn => {
                            btn.addEventListener('click', () => {
                                // Remove active class from all buttons
                                categoryBtns.forEach(b => {
                                    b.classList.remove('active');
                                    b.classList.remove('bg-emerald-600', 'text-white');
                                    b.classList.add('bg-gray-100', 'text-gray-700');
                                });

                                // Add active class to clicked button
                                btn.classList.add('active');
                                btn.classList.remove('bg-gray-100', 'text-gray-700');
                                btn.classList.add('bg-emerald-600', 'text-white');

                                // Get category and filter
                                const category = categoryMap[btn.textContent.trim()];
                                filterCards(category);

                                // Update URL hash for bookmarking
                                window.location.hash = category;
                            });
                        });

                        // Gallery card hover effects and interactions
                        galleryCards.forEach(card => {
                            const img = card.querySelector('img');
                            const overlay = card.querySelector('.overlay-content');
                            const viewMoreBtn = card.querySelector('button');

                            // Enhanced hover effects
                            card.addEventListener('mouseenter', () => {
                                overlay.style.opacity = '1';
                                overlay.style.background = 'rgba(0, 0, 0, 0.6)';
                                card.style.transform = 'translateY(-5px)';
                                card.style.boxShadow = '0 20px 40px rgba(0, 0, 0, 0.15)';
                            });

                            card.addEventListener('mouseleave', () => {
                                overlay.style.opacity = '0';
                                overlay.style.background = 'transparent';
                                card.style.transform = 'translateY(0)';
                                card.style.boxShadow = '0 10px 20px rgba(0, 0, 0, 0.1)';
                            });

                            // View More button functionality
                            viewMoreBtn.addEventListener('click', (e) => {
                                e.preventDefault();
                                const title = card.querySelector('h3').textContent;
                                const price = card.querySelector('.text-emerald-600').textContent;
                                const description = card.querySelector('.text-gray-600').textContent;

                                // Create modal or alert with details
                                showItemDetails(title, price, description, img.src);
                            });
                        });

                        // Show item details function
                        function showItemDetails(title, price, description, imgSrc) {
                            // Decode the URI-encoded values
                            const decodedTitle = decodeURIComponent(title);
                            const decodedPrice = decodeURIComponent(price);
                            const decodedDesc = decodeURIComponent(description);
                            const decodedImgSrc = decodeURIComponent(imgSrc);

                            // Create modal overlay
                            const modal = document.createElement('div');
                            modal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4';
                            modal.innerHTML = `
                            <div class="bg-white rounded-3xl p-8 max-w-2xl w-full relative transform transition-all">
                                <button class="absolute top-6 right-6 text-gray-500 hover:text-gray-700 focus:outline-none" onclick="this.parentElement.parentElement.remove()">
                                    <i class="fas fa-times text-xl"></i>
                                </button>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                                    <!-- Image Section -->
                                    <div class="space-y-4">
                                        <div class="aspect-w-4 aspect-h-3 rounded-2xl overflow-hidden">
                                            <img src="${decodedImgSrc}" alt="${decodedTitle}" class="w-full h-full object-cover">
                                        </div>
                                        <div class="bg-emerald-50 rounded-xl p-4">
                                            <div class="font-semibold text-emerald-800 mb-2">Contact Information:</div>
                                            <div class="space-y-2 text-emerald-600">
                                                <div class="flex items-center space-x-2">
                                                    <i class="fas fa-phone"></i>
                                                    <span>+91 9900077949</span>
                                                </div>
                                                <div class="flex items-center space-x-2">
                                                    <i class="fas fa-envelope"></i>
                                                    <span>info@krushiyuga.com</span>
                                                </div>
                                                <div class="flex items-center space-x-2">
                                                    <i class="fas fa-map-marker-alt"></i>
                                                    <span>Osmanabad, Karnataka</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Content Section -->
                                    <div class="space-y-6">
                                        <div>
                                            <h3 class="text-2xl font-bold text-gray-900 mb-2">${decodedTitle}</h3>
                                            <div class="flex items-center space-x-2 text-emerald-600 text-2xl font-bold">
                                                ${decodedPrice}
                                            </div>
                                        </div>

                                        <div class="space-y-4">
                                            <div class="prose text-gray-600">
                                                ${decodedDesc}
                                            </div>
                                        </div>

                                        <div class="border-t border-gray-200 pt-6">
                                            <div class="text-gray-700 font-semibold mb-4">Why Choose Krushiyuga?</div>
                                            <div class="grid grid-cols-1 gap-4">
                                                <div class="flex items-center space-x-3 text-gray-600">
                                                    <i class="fas fa-check-circle text-emerald-500"></i>
                                                    <span>Premium Quality Livestock</span>
                                                </div>
                                                <div class="flex items-center space-x-3 text-gray-600">
                                                    <i class="fas fa-check-circle text-emerald-500"></i>
                                                    <span>Expert Guidance & Support</span>
                                                </div>
                                                <div class="flex items-center space-x-3 text-gray-600">
                                                    <i class="fas fa-check-circle text-emerald-500"></i>
                                                    <span>Transparent Pricing</span>
                                                </div>
                                                <div class="flex items-center space-x-3 text-gray-600">
                                                    <i class="fas fa-check-circle text-emerald-500"></i>
                                                    <span>After-sale Support</span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="flex gap-4 pt-4">
                                            <button onclick="window.location.href='tel:+919900077949'" class="flex-1 bg-emerald-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-emerald-700 transition-colors flex items-center justify-center space-x-2">
                                                <i class="fas fa-phone"></i>
                                                <span>Call Now</span>
                                            </button>
                                            <button onclick="window.location.href='/contact-us'" class="flex-1 border-2 border-emerald-600 text-emerald-600 px-6 py-3 rounded-xl font-semibold hover:bg-emerald-50 transition-colors flex items-center justify-center space-x-2">
                                                <i class="fas fa-envelope"></i>
                                                <span>Enquire</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `;
                            document.body.appendChild(modal);

                            // Close modal when clicking outside
                            modal.addEventListener('click', (e) => {
                                if (e.target === modal) {
                                    modal.remove();
                                }
                            });

                            // Close modal on escape key
                            document.addEventListener('keydown', (e) => {
                                if (e.key === 'Escape') {
                                    modal.remove();
                                }
                            });
                        }

                        // Contact for item function
                        function contactForItem(title) {
                            const decodedTitle = decodeURIComponent(title);
                            window.location.href = `/contact-us?product=${decodedTitle}`;
                        }
                    </script>


        </body>

        </html>
