                <!-- Success Modal -->
                <div id="successModal"
                    class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
                    <div class="bg-white rounded-2xl p-8 max-w-md mx-4 relative">
                        <div class="text-center">
                            <div
                                class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-check-circle text-green-500 text-2xl"></i>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-800 mb-2">Success!</h3>
                            <p class="text-gray-600 mb-6">Thank you for your inquiry! We will contact you soon.</p>
                            <button onclick="closeSuccessModal()"
                                class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition duration-300">
                                <i class="fas fa-times mr-2"></i>Close
                            </button>
                        </div>
                    </div>
                </div>

                <%- include('../partials/footer.ejs') %>


                    <script>

                        // FAQ toggle function
                        function toggleFAQ(index) {
                            const content = document.getElementById(`faq-content-${index}`);
                            const icon = document.getElementById(`faq-icon-${index}`);

                            if (content.classList.contains('hidden')) {
                                content.classList.remove('hidden');
                                icon.classList.add('rotate-180');
                            } else {
                                content.classList.add('hidden');
                                icon.classList.remove('rotate-180');
                            }
                        }

                        // Intersection Observer for fade-in animation
                        const observerOptions = {
                            threshold: 0.1,
                            rootMargin: '0px 0px -50px 0px'
                        };

                        const observer = new IntersectionObserver((entries) => {
                            entries.forEach(entry => {
                                if (entry.isIntersecting) {
                                    entry.target.style.opacity = '1';
                                    entry.target.style.transform = 'translateY(0)';
                                }
                            });
                        }, observerOptions);

                        document.querySelectorAll('.fade-in').forEach(el => {
                            observer.observe(el);
                        });

                        // Smooth scrolling for internal links
                        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                            anchor.addEventListener('click', function (e) {
                                e.preventDefault();
                                const target = document.querySelector(this.getAttribute('href'));
                                if (target) {
                                    target.scrollIntoView({
                                        behavior: 'smooth'
                                    });
                                }
                            });
                        });

                        // Mobile number validation (fixed selector)
                        document.querySelector('input[name="mobile"]').addEventListener('input', function (e) {
                            let value = e.target.value.replace(/\D/g, '');
                            if (value.length > 10) {
                                value = value.substring(0, 10);
                            }
                            e.target.value = value;
                        });

                        // OTP Variables
                        let otpTimer;
                        let otpTimeLeft = 600; // 10 minutes in seconds
                        let isEmailVerified = false;
                        let currentOtp = '';
                        let isOtpSending = false;

                        // DOM Elements
                        const emailInput = document.getElementById('email');
                        const sendOtpBtn = document.getElementById('sendOtpBtn');
                        const otpSection = document.getElementById('otpSection');
                        const otpInput = document.getElementById('otpInput');
                        const verifyOtpBtn = document.getElementById('verifyOtpBtn');
                        const resendOtpBtn = document.getElementById('resendOtpBtn');
                        const submitBtn = document.getElementById('submitBtn');
                        const submitBtnText = document.getElementById('submitBtnText');
                        const timerDisplay = document.getElementById('timerDisplay');
                        const otpTimer_div = document.getElementById('otpTimer');
                        const emailValidationMsg = document.getElementById('emailValidationMsg');
                        const otpValidationMsg = document.getElementById('otpValidationMsg');

                        // Debug functionality (temporary)
                        // Email validation
                        function validateEmail(email) {
                            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                            return emailRegex.test(email);
                        }

                        // Show message
                        function showMessage(element, message, type = 'error') {
                            element.textContent = message;
                            element.className = `text-sm mt-1 ${type === 'success' ? 'text-green-600' : type === 'warning' ? 'text-yellow-600' : 'text-red-600'}`;
                            element.classList.remove('hidden');
                        }

                        // Hide message
                        function hideMessage(element) {
                            element.classList.add('hidden');
                        }

                        // Update timer display
                        function updateTimerDisplay() {
                            const minutes = Math.floor(otpTimeLeft / 60);
                            const seconds = otpTimeLeft % 60;
                            timerDisplay.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
                        }

                        // Start OTP timer
                        function startOtpTimer() {
                            otpTimeLeft = 600; // Reset to 10 minutes
                            otpTimer_div.classList.remove('hidden');
                            updateTimerDisplay();

                            otpTimer = setInterval(() => {
                                otpTimeLeft--;
                                updateTimerDisplay();

                                if (otpTimeLeft <= 0) {
                                    clearInterval(otpTimer);
                                    otpTimer_div.classList.add('hidden');
                                    resendOtpBtn.disabled = false;
                                    showMessage(otpValidationMsg, 'OTP has expired. Please request a new one.', 'warning');
                                }
                            }, 1000);
                        }

                        // Stop OTP timer
                        function stopOtpTimer() {
                            if (otpTimer) {
                                clearInterval(otpTimer);
                                otpTimer_div.classList.add('hidden');
                            }
                        }

                        // Send OTP
                        async function sendOTP() {
                            const email = emailInput.value.trim();

                            if (!email) {
                                showMessage(emailValidationMsg, 'Please enter your email address.');
                                emailInput.focus();
                                return;
                            }

                            if (!validateEmail(email)) {
                                showMessage(emailValidationMsg, 'Please enter a valid email address.');
                                emailInput.focus();
                                return;
                            }

                            hideMessage(emailValidationMsg);

                            // Show loading state
                            isOtpSending = true;
                            sendOtpBtn.disabled = true;
                            sendOtpBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i>Sending...';

                            try {
                                const response = await fetch('/send-otp', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify({ email })
                                });

                                const data = await response.json();

                                if (response.ok && data.success) {
                                    showMessage(emailValidationMsg, 'OTP sent successfully! Please check your email.', 'success');
                                    otpSection.classList.remove('hidden');
                                    sendOtpBtn.textContent = 'Resend OTP';
                                    emailInput.disabled = true;
                                    startOtpTimer();
                                    resendOtpBtn.disabled = true;
                                    setTimeout(() => {
                                        resendOtpBtn.disabled = false;
                                    }, 30000); // Enable resend after 30 seconds
                                    otpInput.focus();
                                } else {
                                    showMessage(emailValidationMsg, data.message || 'Failed to send OTP. Please try again.');
                                }
                            } catch (error) {
                                console.error('Error sending OTP:', error);
                                showMessage(emailValidationMsg, 'Network error. Please try again.');
                            } finally {
                                isOtpSending = false;
                                sendOtpBtn.disabled = false;
                                sendOtpBtn.innerHTML = 'Send OTP';
                            }
                        }

                        // Verify OTP
                        async function verifyOTP() {
                            const email = emailInput.value.trim();
                            const otp = otpInput.value.trim();

                            if (!otp || otp.length !== 6) {
                                showMessage(otpValidationMsg, 'Please enter a valid 6-digit OTP.');
                                otpInput.focus();
                                return;
                            }

                            hideMessage(otpValidationMsg);

                            // Show loading state
                            verifyOtpBtn.disabled = true;
                            verifyOtpBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i>Verifying...';

                            try {
                                const response = await fetch('/verify-otp', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify({ email, otp })
                                });

                                const data = await response.json();

                                if (response.ok && data.success) {
                                    console.log('✅ OTP Verification Success - Setting variables:');
                                    showMessage(otpValidationMsg, 'Email verified successfully! ✓', 'success');
                                    isEmailVerified = true;
                                    currentOtp = otp;
                                    document.getElementById('verifiedOtp').value = otp;
                                    document.getElementById('isOtpVerified').value = 'true';

                                    console.log('  - isEmailVerified set to:', isEmailVerified);
                                    console.log('  - currentOtp set to:', currentOtp);
                                    console.log('  - verifiedOtp hidden field set to:', document.getElementById('verifiedOtp').value);
                                    console.log('  - isOtpVerified hidden field set to:', document.getElementById('isOtpVerified').value);

                                    // Enable submit button with animation
                                    submitBtn.disabled = false;
                                    submitBtn.className = 'w-full bg-green-600 text-white font-semibold py-4 px-6 rounded-lg hover:bg-green-700 transition duration-300 shadow-lg transform hover:scale-105 cursor-pointer verification-success';
                                    submitBtnText.textContent = 'Send Message';

                                    // Hide and disable OTP verification elements
                                    otpInput.disabled = true;
                                    verifyOtpBtn.style.display = 'none'; // Hide the verify button
                                    resendOtpBtn.disabled = true;
                                    stopOtpTimer();

                                    // Show success styling with custom classes
                                    otpInput.className = 'form-input w-full px-4 py-3 pr-32 border rounded-lg focus:ring-2 focus:ring-green-500 outline-none text-center text-2xl font-mono tracking-widest otp-verified';

                                    // Add verified checkmark icon to OTP input with animation
                                    if (!document.getElementById('otpVerifiedIcon')) {
                                        const verifiedIcon = document.createElement('div');
                                        verifiedIcon.id = 'otpVerifiedIcon';
                                        verifiedIcon.className = 'absolute right-3 top-1/2 transform -translate-y-1/2 text-green-600 slide-in';
                                        verifiedIcon.innerHTML = '<i class="fas fa-check-circle text-lg pulse-green"></i>';
                                        otpInput.parentElement.appendChild(verifiedIcon);
                                    }

                                    // Update the email input to show verified status with custom classes
                                    emailInput.className = 'form-input w-full px-4 py-3 pr-28 border rounded-lg focus:ring-2 focus:ring-green-500 outline-none email-verified';
                                    sendOtpBtn.innerHTML = '<i class="fas fa-check-circle mr-1"></i>Verified';
                                    sendOtpBtn.disabled = true;
                                    sendOtpBtn.className = 'absolute right-2 top-1/2 transform -translate-y-1/2 bg-green-500 text-white px-4 py-2 rounded-md text-sm font-medium cursor-not-allowed verification-success';

                                } else {
                                    showMessage(otpValidationMsg, data.message || 'Invalid OTP. Please try again.');
                                    if (data.shouldRequestNew) {
                                        resendOtpBtn.disabled = false;
                                    }
                                    // Only restore verify button if verification failed
                                    verifyOtpBtn.disabled = false;
                                    verifyOtpBtn.innerHTML = 'Verify';
                                }
                            } catch (error) {
                                console.error('Error verifying OTP:', error);
                                showMessage(otpValidationMsg, 'Network error. Please try again.');
                                // Only restore verify button if there was an error
                                verifyOtpBtn.disabled = false;
                                verifyOtpBtn.innerHTML = 'Verify';
                            }
                            // Removed the finally block that was re-enabling the button
                        }

                        // Event Listeners
                        sendOtpBtn.addEventListener('click', sendOTP);
                        resendOtpBtn.addEventListener('click', sendOTP);
                        verifyOtpBtn.addEventListener('click', verifyOTP);

                        // Email input change listener
                        emailInput.addEventListener('input', function () {
                            if (isEmailVerified) {
                                // Reset verification if email is changed
                                resetOtpState();
                            }
                        });

                        // OTP input formatting
                        otpInput.addEventListener('input', function (e) {
                            let value = e.target.value.replace(/\D/g, '');
                            if (value.length > 6) {
                                value = value.substring(0, 6);
                            }
                            e.target.value = value;

                            // Auto-verify when 6 digits are entered
                            if (value.length === 6) {
                                setTimeout(verifyOTP, 100);
                            }
                        });

                        // Enter key handling for OTP
                        otpInput.addEventListener('keypress', function (e) {
                            if (e.key === 'Enter') {
                                e.preventDefault();
                                verifyOTP();
                            }
                        });

                        // Form submission
                        document.getElementById('contactForm').addEventListener('submit', async function (e) {
                            e.preventDefault();

                            // Check if email is verified using multiple methods
                            const hiddenOtpVerified = document.getElementById('isOtpVerified').value;
                            const hiddenOtpValue = document.getElementById('verifiedOtp').value;

                            // More robust verification check - prioritize hidden fields as they're more reliable
                            const isVerifiedByHiddenField = hiddenOtpVerified === 'true';
                            const hasValidOtpInHiddenField = hiddenOtpValue && hiddenOtpValue.length === 6;

                            // Check if the success message is visible as an additional verification
                            const successMessage = document.getElementById('otpValidationMsg');
                            const hasSuccessMessage = successMessage && !successMessage.classList.contains('hidden') &&
                                successMessage.textContent.includes('Email verified successfully');

                            // If hidden fields show verification OR success message is visible, proceed
                            if (!isVerifiedByHiddenField && !hasSuccessMessage) {
                                alert('Please verify your email address before submitting the form.');
                                return;
                            }

                            if (!hasValidOtpInHiddenField && !currentOtp) {
                                alert('Please verify your email with OTP before submitting the form.');
                                return;
                            }

                            // Force set variables if hidden fields are valid but JavaScript variables are not
                            if (isVerifiedByHiddenField && hasValidOtpInHiddenField) {
                                isEmailVerified = true;
                                currentOtp = hiddenOtpValue;
                            }

                            // Use the most reliable OTP value
                            const finalOtp = hiddenOtpValue || currentOtp;

                            const formData = {
                                firstName: document.getElementById('firstName').value,
                                lastName: document.getElementById('lastName').value,
                                email: document.getElementById('email').value,
                                mobile: document.getElementById('mobile').value,
                                inquiryType: document.getElementById('inquiryType').value,
                                location: document.getElementById('location').value,
                                message: document.getElementById('message').value,
                                otp: finalOtp,
                                isOtpVerified: 'true',
                                source: 'contact-us-page'
                            };

                            // Validate required fields
                            if (!formData.firstName || !formData.lastName || !formData.email || !formData.mobile || !formData.message) {
                                alert('Please fill in all required fields.');
                                return;
                            }

                            // Show loading state
                            const submitButton = document.querySelector('button[type="submit"]');
                            const originalText = submitButton.innerHTML;
                            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Sending...';
                            submitButton.disabled = true;

                            try {
                                const response = await fetch('/contact-us', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify(formData)
                                });

                                let data;
                                try {
                                    data = await response.json();
                                } catch (parseError) {
                                    throw new Error('Invalid server response');
                                }

                                if (response.ok && data.success) {
                                    // Show success modal
                                    showSuccessModal();
                                    // Reset form and OTP state
                                    document.getElementById('contactForm').reset();
                                    resetOtpState();
                                } else {
                                    if (data.requireOtpVerification) {
                                        alert('Email verification required. Please verify your email with OTP.');
                                    } else {
                                        alert(data.message || 'Something went wrong. Please try again.');
                                    }
                                }
                            } catch (error) {
                                alert('Something went wrong. Please try again later.');
                            } finally {
                                // Restore button state
                                submitButton.innerHTML = originalText;
                                submitButton.disabled = !isEmailVerified;
                            }
                        });

                        // Reset OTP state function
                        function resetOtpState() {
                            isEmailVerified = false;
                            currentOtp = '';
                            document.getElementById('verifiedOtp').value = '';
                            document.getElementById('isOtpVerified').value = 'false';

                            // Reset email input
                            emailInput.disabled = false;
                            emailInput.className = 'form-input w-full px-4 py-3 pr-28 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none';

                            // Reset send OTP button
                            sendOtpBtn.textContent = 'Send OTP';
                            sendOtpBtn.disabled = false;
                            sendOtpBtn.className = 'absolute right-2 top-1/2 transform -translate-y-1/2 bg-green-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-green-700 transition duration-300 disabled:bg-gray-400 disabled:cursor-not-allowed';

                            // Hide OTP section
                            otpSection.classList.add('hidden');

                            // Reset submit button
                            submitBtn.disabled = true;
                            submitBtn.className = 'w-full bg-gray-400 text-white font-semibold py-4 px-6 rounded-lg transition duration-300 shadow-lg cursor-not-allowed disabled:bg-gray-400';
                            submitBtnText.textContent = 'Verify Email to Send Message';

                            // Stop timer
                            stopOtpTimer();

                            // Hide messages
                            hideMessage(emailValidationMsg);
                            hideMessage(otpValidationMsg);

                            // Reset OTP input states
                            otpInput.disabled = false;
                            otpInput.value = '';
                            otpInput.className = 'form-input w-full px-4 py-3 pr-32 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none text-center text-2xl font-mono tracking-widest';

                            // Reset verify button
                            verifyOtpBtn.disabled = false;
                            verifyOtpBtn.style.display = 'block'; // Show the verify button again
                            verifyOtpBtn.innerHTML = 'Verify';

                            // Reset resend button
                            resendOtpBtn.disabled = false;

                            // Remove verified icon if exists
                            const verifiedIcon = document.getElementById('otpVerifiedIcon');
                            if (verifiedIcon) {
                                verifiedIcon.remove();
                            }
                        }

                        // Modal functions
                        function showSuccessModal() {
                            const modal = document.getElementById('successModal');

                            if (modal) {
                                // Remove hidden class and add flex display
                                modal.classList.remove('hidden');
                                modal.classList.add('flex');
                                modal.style.display = 'flex'; // Force display
                            }
                        }

                        function closeSuccessModal() {
                            const modal = document.getElementById('successModal');
                            if (modal) {
                                modal.classList.add('hidden');
                                modal.classList.remove('flex');
                                modal.style.display = 'none';
                            }
                        }
                    </script>



        </body>

