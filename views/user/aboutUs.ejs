                    <script>
                        // Intersection Observer for fade-in animation
                        const aboutObserverOptions = {
                            threshold: 0.1,
                            rootMargin: '0px 0px -50px 0px'
                        };

                        const aboutObserver = new IntersectionObserver((entries) => {
                            entries.forEach(entry => {
                                if (entry.isIntersecting) {
                                    entry.target.classList.add('animate');
                                }
                            });
                        }, aboutObserverOptions);

                        document.querySelectorAll('.about-fade-in').forEach(el => {
                            aboutObserver.observe(el);
                        });

                        // Counter Animation
                        const aboutCounterItems = document.querySelectorAll('.about-counter-item');

                        const aboutAnimateCounter = (element, target) => {
                            let count = 0;
                            const increment = target / 100;
                            const timer = setInterval(() => {
                                count += increment;
                                if (count >= target) {
                                    count = target;
                                    clearInterval(timer);
                                }
                                element.textContent = Math.floor(count) + '+';
                            }, 20);
                        };

                        const aboutCounterObserver = new IntersectionObserver((entries) => {
                            entries.forEach(entry => {
                                if (entry.isIntersecting) {
                                    const counterElement = entry.target.querySelector('.text-3xl');
                                    const text = counterElement.textContent;
                                    const target = parseInt(text.replace(/\D/g, ''));

                                    if (target) {
                                        aboutAnimateCounter(counterElement, target);
                                    }
                                }
                            });
                        }, aboutObserverOptions);

                        aboutCounterItems.forEach(item => {
                            aboutCounterObserver.observe(item);
                        });

                        // Smooth scrolling for anchor links
                        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                            anchor.addEventListener('click', function (e) {
                                e.preventDefault();
                                const target = document.querySelector(this.getAttribute('href'));
                                if (target) {
                                    target.scrollIntoView({
                                        behavior: 'smooth',
                                        block: 'start'
                                    });
                                }
                            });
                        });

                        // Mobile menu toggle
                        const aboutMobileMenuBtn = document.querySelector('.md\\:hidden button');
                        const aboutMobileMenu = document.querySelector('.md\\:flex');

                        if (aboutMobileMenuBtn) {
                            aboutMobileMenuBtn.addEventListener('click', () => {
                                aboutMobileMenu.classList.toggle('hidden');
                            });
                        }

                        // Parallax effect for floating elements
                        window.addEventListener('scroll', () => {
                            const scrolled = window.pageYOffset;
                            const parallaxElements = document.querySelectorAll('.about-floating-animation');

                            parallaxElements.forEach(element => {
                                const speed = 0.5;
                                element.style.transform = `translateY(${scrolled * speed}px)`;
                            });
                        });

                        // Add loading animation
                        window.addEventListener('load', () => {
                            document.body.classList.add('loaded');
                        });

                        // Progressive image loading
                        const aboutImages = document.querySelectorAll('img');
                        const aboutImageObserver = new IntersectionObserver((entries) => {
                            entries.forEach(entry => {
                                if (entry.isIntersecting) {
                                    const img = entry.target;
                                    img.style.opacity = '1';
                                    img.style.transform = 'scale(1)';
                                    aboutImageObserver.unobserve(img);
                                }
                            });
                        });

                        aboutImages.forEach(img => {
                            img.style.opacity = '0';
                            img.style.transform = 'scale(0.8)';
                            img.style.transition = 'all 0.3s ease';
                            aboutImageObserver.observe(img);
                        });

                        // Add hover effects for interactive elements
                        const aboutInteractiveElements = document.querySelectorAll('.about-card-hover, .about-team-card, .about-value-card');

                        aboutInteractiveElements.forEach(element => {
                            element.addEventListener('mouseenter', () => {
                                element.style.transform = 'translateY(-8px)';
                            });

                            element.addEventListener('mouseleave', () => {
                                element.style.transform = 'translateY(0)';
                            });
                        });

                        // Testimonial rotation (optional enhancement)
                        const aboutTestimonials = document.querySelectorAll('.about-testimonial-card');
                        let aboutCurrentTestimonial = 0;

                        const aboutRotateTestimonials = () => {
                            aboutTestimonials.forEach((testimonial, index) => {
                                if (index === aboutCurrentTestimonial) {
                                    testimonial.style.transform = 'scale(1.05)';
                                    testimonial.style.zIndex = '10';
                                } else {
                                    testimonial.style.transform = 'scale(1)';
                                    testimonial.style.zIndex = '1';
                                }
                            });

                            aboutCurrentTestimonial = (aboutCurrentTestimonial + 1) % aboutTestimonials.length;
                        };

                        // Rotate testimonials every 5 seconds
                        setInterval(aboutRotateTestimonials, 5000);

                        // Add scroll-triggered animations for milestone cards
                        const aboutMilestoneCards = document.querySelectorAll('.about-milestone-card');

                        const aboutMilestoneObserver = new IntersectionObserver((entries) => {
                            entries.forEach(entry => {
                                if (entry.isIntersecting) {
                                    entry.target.style.opacity = '1';
                                    entry.target.style.transform = 'translateX(0)';
                                }
                            });
                        }, aboutObserverOptions);

                        aboutMilestoneCards.forEach((card, index) => {
                            card.style.opacity = '0';
                            card.style.transform = index % 2 === 0 ? 'translateX(-50px)' : 'translateX(50px)';
                            card.style.transition = 'all 0.6s ease';
                            aboutMilestoneObserver.observe(card);
                        });

                        // Add dynamic background gradient
                        const aboutGradientSections = document.querySelectorAll('.about-gradient-bg');

                        aboutGradientSections.forEach(section => {
                            section.addEventListener('mousemove', (e) => {
                                const rect = section.getBoundingClientRect();
                                const x = e.clientX - rect.left;
                                const y = e.clientY - rect.top;

                                const centerX = rect.width / 2;
                                const centerY = rect.height / 2;

                                const deltaX = (x - centerX) / centerX;
                                const deltaY = (y - centerY) / centerY;

                                section.style.background = `linear-gradient(${135 + deltaX * 10}deg, #10b981 ${0 + deltaY * 5}%, #059669 ${100 - deltaY * 5}%)`;
                            });

                            section.addEventListener('mouseleave', () => {
                                section.style.background = 'linear-gradient(135deg, #10b981 0%, #059669 100%)';
                            });
                        });
                    </script>

